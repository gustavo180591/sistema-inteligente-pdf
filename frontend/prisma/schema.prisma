// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  name          String?
  password      String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  documentos    DocumentoPDF[]
}

model DocumentoPDF {
  id            String       @id @default(cuid())
  nombreArchivo String
  tipo          String       // TRANSFERENCIA, SIDEPP, etc.
  estado        String       // PROCESADO, PENDIENTE, ERROR
  fechaCarga    DateTime     @default(now())
  url           String?
  metadata      Json?
  userId        String
  user          User         @relation(fields: [userId], references: [id])
  transferencia Transferencia?
  sidepp        SIDEPP?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([userId])
}

model Transferencia {
  id             String      @id @default(cuid())
  documento      DocumentoPDF @relation(fields: [documentoId], references: [id])
  documentoId    String      @unique
  fechaOperacion DateTime
  montoTotal     Decimal
  cbuOrigen      String
  cbuDestino     String
  referencia     String?
  detalles       Json?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model SIDEPP {
  id             String      @id @default(cuid())
  documento      DocumentoPDF @relation(fields: [documentoId], references: [id])
  documentoId    String      @unique
  periodo        String
  total          Decimal
  detalles       Json?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model Persona {
  id        String   @id @default(cuid())
  nombre    String
  apellido  String
  documento String?  @unique
  legajos   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([apellido, nombre])
}